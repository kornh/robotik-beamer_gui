<button id="motor1-backward" type="button" class="btn btn-primary">
    <span class="glyphicon glyphicon-backward" aria-hidden="true"></span>
</button>

<span class="btn btn-primary" aria-hidden="true">Motor 1</span>

<button id="motor1-forward" type="button" class="btn btn-primary">
    <span class="glyphicon glyphicon-forward" aria-hidden="true"></span>
</button>

<script>
var motor1 = 0;
var socket = io();

$("#motor1-backward").click(function(){
    if(motor1 == 0)
    {
        $("#motor1-backward").attr("class", "btn btn-success");
        socket.emit('motor1', "-1");
        motor1 = -1;
    }
    else if(motor1 == -1)
    {
        $("#motor1-backward").attr("class", "btn btn-primary");
        socket.emit('motor1', "0");
        motor1 = 0;
    }
    else if(motor1 == 1)
    {
         $("#motor1-backward").attr("class", "btn btn-success");
         $("#motor1-forward").attr("class", "btn btn-primary");
         socket.emit('motor1', "-1");
         motor1 = -1;
    }
});

$("#motor1-forward").click(function(){
    if(motor1 == 0)
    {
        $("#motor1-forward").attr("class", "btn btn-success");
        socket.emit('motor1', "1");
        motor1 = 1;
    }
    else if(motor1 == 1)
    {
        $("#motor1-forward").attr("class", "btn btn-primary");
        socket.emit('motor1', "0");
        motor1 = 0;
    }
    else if(motor1 == -1)
    {
        $("#motor1-forward").attr("class", "btn btn-success");
        $("#motor1-backward").attr("class", "btn btn-primary");
        socket.emit('motor1', "1");
        motor1 = 1;
    }
});
</script>